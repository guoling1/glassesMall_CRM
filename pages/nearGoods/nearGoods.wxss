/* pages/nearGoods/nearGoods.wxss */

.search-box {
  margin-bottom: 20rpx;
  padding-bottom: 30rpx;
  font-size: 0;
  border-top: 20rpx solid #f1f1f3;
  box-shadow: 0 20rpx 20rpx #fbfcff;
}

.search {
  margin: 45rpx auto 30rpx;
  width: 643rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: #f9f9f9;
  border: 1rpx solid #e4e4e4;
  border-radius: 29rpx;
  font-size: 24rpx;
}

.search image {
  display: inline-block;
  margin: 0 11rpx 0 27rpx;
  vertical-align: middle;
  width: 26rpx;
  height: 26rpx;
}

.search .inp {
  display: inline-block;
  vertical-align: middle;
  width: 560rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 24rpx;
}

.item {
  margin: 0 auto;
  padding: 20rpx 0;
  width: 690rpx;
  font-weight: 600;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.item .date {
  font-size: 24rpx;
  color: #999;
}

.item .name {
  display: inline-block;
  width: 300rpx;
}

.fix{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #4944fe;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  border-radius: 0;
}

.touch-item1 {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  font-size: 0;
}
 
.content1 {
  width: 100%;
  /* line-height: 50rpx; */
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(196rpx);
  transform: translateX(196rpx);
  margin-left: -196rpx;
margin-bottom: 20rpx;
box-shadow: 0 0 20rpx #d2d0fa;
  padding-bottom: 20rpx;
}
.btn-group {
  display: flex;
  justify-content: space-around;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #fff;
  /* color: #4944fe; */
  font-weight: 600;
  margin: 0 auto;
  width: 690rpx;
  text-align: center;
}

.btn-group .edit {
  display: inline-block;
  width: 50%;
  background-color: #4944fe;
}

.btn-group .del {
  display: inline-block;
  width: 50%;
  background-color: #e4373b;
}
 
.del1 {
  background-color: #4944fe;
  width: 98rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(196rpx);
  transform: translateX(196rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 24rpx;
}

.del2 {
  background-color: #e4373b;
  margin-left: -1rpx;
}
 
.touch-move-active1 .content1, .touch-move-active1 .del1 {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
 
.row1 {
  display: flex;
  flex-direction: row;
}
 
.column1 {
  display: flex;
  flex-direction: column;
}
 
.full_width1 {
  width: 100%;
}