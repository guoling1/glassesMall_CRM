/* pages/login/login.wxss */
page{
  height: 100%;
}
.login{
  width: 100%;
  height: 100%;
}
.login .bg{
  position: absolute;
  bottom: 0;
  width: 611rpx;
  height: 502rpx;
}
.content{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
}
.login .title{
  padding: 100rpx 0 80rpx;
  font-size: 54rpx;
  font-weight: bold;
  text-align: center;
}
input,button{
  margin: 0 auto 48rpx;
  width: 660rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 10rpx;
}
input{
  padding: 0 40rpx;
  width: 580rpx;
  font-size: 32rpx;
  background: #f5f5f5;
}
button{
  font-size: 36rpx;
  font-weight: bold;
  background: #fff;
  color: #fff;
  background: #4944fe;
}
.regist{
  margin: 0 auto;
  width: 660rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  color: #4944fe;
  background: #fff;
  border: 1rpx solid #4944fe;
}