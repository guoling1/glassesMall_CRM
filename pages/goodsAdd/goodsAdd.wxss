/* pages/goodsAdd/goodsAdd.wxss */
.item{
  margin: 0 auto 26rpx;
  line-height: 66rpx;
  font-size: 28rpx;
  text-align: center;
}
.item:first-child{
  margin-top: 66rpx;
}
.item .inp{
  display: inline-block;
  width: 560rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1rpx solid #e9eaec;
  border-radius: 8rpx;
  vertical-align: middle;
}
.fix{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #4944fe;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  border-radius: 0;
}