/* pages/customList/customList.wxss */
page{
  height: 100%;
  background: #f2f2f3;
}
.search-box{
  padding: 45rpx 52rpx 30rpx;
  background: #fff;
  border-bottom: 20rpx solid #eff0f3;
}
.search-box .search{
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 29rpx;
  border: 1rpx solid #e4e4e4;
  background: #f9f9f9;
}
.search-box .search image{
  margin: 0 11rpx 0 27rpx;
  width: 26rpx;
  height: 26rpx;
}
.search-box .search input{
  display: inline-block;
  width: 400rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 24rpx;
  vertical-align: top;
  z-index: 1;
}
.search-box .search button{
  float: right;
  margin-right: 16rpx;
  margin-top: 10rpx;
  padding: 0;
  width: 156rpx;
  height: 38rpx;
  line-height: 38rpx;
  font-size: 24rpx;
  font-weight: #333;
  text-align: center;
  border-left: 1rpx solid #999;
  border-radius: 0;
}
.search-box .search button::after{
  border: none;
  border-radius: 0;
}

.search-mask{
  z-index: 111;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5)
}
.search-mask .content{
  padding: 44rpx 0 56rpx;
  background: #fff;
}
.search-mask .inp{
  margin: 0 auto 26rpx;
  width: 643rpx;
  height: 58rpx;
  line-height: 58rpx; 
  text-align: center;
  border: 1rpx solid #e4e4e4;
  border-radius: 29rpx;
  background: #f9f9f9;
  font-size: 24rpx;
}
.search-mask .top{
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  width: 645rpx;
}
.search-mask .top .inp{
  margin: 0 0 26rpx;
  width: 304rpx;
}
.search-mask .search {
  margin: 45rpx auto 30rpx;
  width: 643rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: #f9f9f9;
  border: 1rpx solid #e4e4e4;
  border-radius: 29rpx;
  font-size: 24rpx;
}

.search-mask .search .inp {
  display: inline-block;
  margin: 0 0 0 32rpx;
  width: 200rpx;
  text-align: center;
  vertical-align: middle;
  border: none;
  background: transparent;
}

.search-mask .search .calendar {
  display: inline-block;
  margin-right: 52rpx;
  width: 27rpx;
  height: 23rpx;
  vertical-align: middle;
}

.search-mask .search text {
  height: 58rpx;
  line-height: 58rpx;
}
.search-mask .submit {
  margin: 37rpx auto 0;
  width: 304rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: #4944fe;
  border-radius: 29rpx;
  font-size: 24rpx;
  color: #fff;
}

.item {
  margin: 0 auto 10rpx;
  padding: 12rpx 30rpx;
  width: 690rpx;
  font-weight: 600;
  font-size: 24rpx;
  background: #fff;
  line-height: 52rpx;
}
.item .top text{
  margin-right: 24rpx;
}
.item .top .name{
  font-size: 32rpx;
}

.item .date {
  float: right;
  font-weight: normal;
}

.item .detail {
  /* font-size: 24rpx; */
  font-weight: bold;
  color: #666;
}
.touch-item1 {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  font-size: 0;
}
 
.content1 {
  width: 100%;
  /* line-height: 50rpx; */
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(196rpx);
  transform: translateX(196rpx);
  margin-left: -196rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 20rpx #d2d0fa;
  padding-bottom: 20rpx;
  background: #fff;

}
.btn-group {
  display: flex;
  justify-content: space-around;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #fff;
  /* color: #4944fe; */
  font-weight: 600;
  margin: 0 auto;
  width: 690rpx;
  text-align: center;
}

.btn-group .edit {
  display: inline-block;
  width: 50%;
  background-color: #4944fe;
}

.btn-group .del {
  display: inline-block;
  width: 50%;
  background-color: #e4373b;
}
 
.del1 {
  margin-bottom: 10rpx;
  background-color: #4944fe;
  width: 98rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(196rpx);
  transform: translateX(196rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 24rpx;
}

.del2 {
  background-color: #e4373b;
  margin-left: -1rpx;
}
 
.touch-move-active1 .content1, .touch-move-active1 .del1 {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
 
.row1 {
  display: flex;
  flex-direction: row;
}
 
.column1 {
  display: flex;
  flex-direction: column;
}
 
.full_width1 {
  width: 100%;
}
.add{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  background: #fff;
  color: #fff;
  background: #4944fe;
}