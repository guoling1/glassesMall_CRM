/* pages/lensAdd/lensAdd.wxss */
.search-box {
  margin-bottom: 44rpx;
  padding: 44rpx 0 56rpx;
  background: #fff;
  box-shadow: 0 20rpx 20rpx #fbfcff;
  border-top: 20rpx solid #f2f2f3;
  font-size: 0;
}

.search {
  margin: 0 auto 30rpx;
  width: 643rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: #f9f9f9;
  border: 1rpx solid #e4e4e4;
  border-radius: 29rpx;
  font-size: 24rpx;
}

.search .inp {
  display: inline-block;
  margin: 0 0 0 32rpx;
  width: 200rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  vertical-align: middle;
  border: none;
  background: transparent;
}
.type image{
  display: inline-block;
  margin: 0 10rpx 0 27rpx;
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}
.search.type .inp{
  margin: 0;
  width: 550rpx;
  text-align: left;
}
.search .calendar {
  display: inline-block;
  margin-right: 52rpx;
  width: 27rpx;
  height: 23rpx;
  vertical-align: middle;
}

.submit {
  margin: 0 auto;
  width: 643rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: #4944fe;
  border-radius: 29rpx;
  font-size: 24rpx;
  color: #fff;
}
.table{
  padding: 0 30rpx;
}
.table .rows{
  line-height: 50rpx;
  font-size: 18rpx;
  font-weight: bold;
  background: #f7fafc;
}
.table .rows:nth-child(2n){
  background: #fff;
}
.table .rows text{
  display: inline-block; 
  border-right: 1rpx dashed #d9d8d8;
  text-align: center;
}
.table .rows text:last-child{
  border-right: none;
}
.table .rows .item1{
  width: 144rpx
}
.table .rows .item2{
  width: 133rpx
}
.table .rows .item3,.table .rows .item4{
  width: 96rpx
}
.table .rows .item5{
  width: 149rpx;
}
.table .rows .item6{
  width: 67rpx;
}